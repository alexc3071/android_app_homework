<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Homework9" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Hiding actionbar padding -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/backgroundColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <style name="Theme.Homework9.Launcher">
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>


    <style name="searchStyle" parent="Widget.AppCompat.Light.SearchView">
                <item name="android:textColorHint">@color/colorLight</item>
                <item name="android:textColorPrimary">@color/white</item>
                <item name="android:textColorSecondary">@color/colorLight</item>
                <item name="android:tint">@color/white</item>

    </style>




</resources>